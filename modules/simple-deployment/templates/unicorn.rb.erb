# Set the working application directory
# working_directory "/path/to/your/app"
working_directory "/var/www/simple-deployment"

# Unicorn PID file location
# pid "/path/to/pids/unicorn.pid"
pid "/var/run/simple-deployment-daemon.pid"

# Path to logs
# stderr_path "/path/to/logs/unicorn.log"
# stdout_path "/path/to/logs/unicorn.log"
stderr_path "/var/log/simple-deployment.log"
stdout_path "/var/log/simple-deployment.log"

# Unicorn socket
# listen "/tmp/unicorn.[app name].sock"
listen "/tmp/unicorn.simple-deployment.sock"

# Number of processes
# worker_processes 4
worker_processes 2

# Time-out
timeout 30